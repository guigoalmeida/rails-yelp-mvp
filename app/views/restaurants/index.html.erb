
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All restaurants</h1>
      <%= link_to "Create a new restaurant", restaurants_new_path, class: 'btn btn-primary' %>
      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <% end %>
      </ul> 
    </div>
  </div>
</div>
